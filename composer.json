{
    "name": "bolt/configuration-notices-widget",
    "description": "ðŸ’¡ A small tool to point out common pitfalls for Bolt 5 configuration settings",
    "type": "bolt-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Bolt developers"
        },
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "bolt/core": "^5.2 || ^6",
        "phpstan/phpstan": "2.1.28",
        "rector/rector": "2.1.7",
        "symplify/easy-coding-standard": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "Bolt\\ConfigurationNoticesWidget\\": "src/"
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "extra": {
        "entrypoint": "Bolt\\ConfigurationNoticesWidget\\Extension",
        "screenshots": [
            "screenshots/notices.png"
        ]
    },
    "replace": {
        "bobdenotter/configuration-notices": "*"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": false,
            "drupol/composer-packages": false,
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
